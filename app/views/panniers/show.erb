<h1><%= @pannier.name %></h1>
<h4>(<%= @pannier.location %>)</h4>
<br>
<h4>Items: </h4>
  <table class="table-condensed table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Weight (kg)</th>
      </tr>
    </thead>
    <tbody>
      <% total_weight = 0 %>
      <% @pannier.items.each do |item| %>
        <tr>
          <td><a href="/items/<%= item.id %>"><%= item.name %></a></td>
          <td><%= item.weight %></td>
          <% total_weight += item.weight %>
        </tr>
      <% end %>
        <tr>
          <td><strong>Total weight</strong></td>
          <td><%= total_weight.round(2) %>
        </tr>
    </tbody>
  </table>
<br>
<br>

<a href="/panniers/<%= @pannier.id %>/edit" class="btn btn-primary" role="button">Edit Pannier</a>
<form method="post" action="/panniers/<%=@pannier.id%>/delete">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <input type="submit" class="btn btn-danger" value="Delete Pannier">
</form>
