<h1><strong>Sign up for Packlist</strong></h1>
<% unless locals.empty? %>
    <div>
      <h2 class="text-danger"><strong>ERROR:</strong></h2>
      <% error_list.each do |e| %>
        <h2 class="text-danger"><strong><%= e %></strong></h2>
      <% end %>
    </div>
<% end %>
<h3>Create a username and password.</h3>
<form action="/signup" method="POST">
  <input type="text" name="username" placeholder="Username:">
  <input type="text" name="password" placeholder="Password:">
  <input type="submit" value="Sign Up" class="btn btn-primary">
</form>
<br>
<br>
<h4>Already have an account?</h4>
<a href="/login" class="btn btn-primary" role="button">Log In</a>
